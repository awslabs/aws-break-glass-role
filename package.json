{
  "name": "aws-break-glass-role",
  "description": "Create a break glass role for emergency use in order to limit production console access. Configure automatic alerts and logging of activities in the role to secure its use in production environments.",
  "version": "0.0.0-dev.1",
  "main": "./lib/index.js",
  "types": "./src/index.ts",
  "typesVersions": {
    "<=3.9": {
      "*": [
        ".types-compat/ts3.9/*"
      ]
    }
  },
  "author": {
    "name": "Steven Guggenheimer",
    "email": "sguggenh@amazon.com",
    "url": "https://github.com/smguggen"
  },
  "contributors": [
    {
      "name": "Ryan Sonshine",
      "email": "ryansonshine@users.noreply.github.com",
      "url": "https://github.com/ryansonshine"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/awslabs/aws-break-glass-role"
  },
  "keywords": [
    "aws",
    "breakglassrole",
    "cdk",
    "security",
    "IAM role",
    "least privilege"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "test-build": "tsc --project tsconfig.test.json",
    "watch": "tsc -w",
    "test": "jest --ci --reporters=default --coverage \".*\\..*\"",
    "integ": "npm run test-build && integ-runner",
    "prepare": "husky install",
    "verify-release": "node ./scripts/index.js signin && node ./scripts/index.js cleanup us-east-1 us-east-2 us-west-2 && npm run integ",
    "semantic-release": "semantic-release",
    "jsii:build": "jsii",
    "jsii:watch": "jsii --watch",
    "jsii:pkg": "jsii-pacmak"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@aws-cdk/integ-runner": "^2.55.1",
    "@aws-cdk/integ-tests-alpha": "^2.55.1-alpha.0",
    "@ryansonshine/commitizen": "^4.2.8",
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@semantic-release/exec": "^6.0.3",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.15",
    "aws-sdk": "^2.1282.0",
    "constructs": "10.0.0",
    "aws-cdk-lib": "2.55.1",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "husky": "^6.0.0",
    "jest": "^29.3.1",
    "jsii": "^5.0.0",
    "jsii-pacmak": "^1.79.0",
    "semantic-release": "^20.1.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "peerDependencies": {
    "aws-cdk-lib": "^2.55.1",
    "constructs": "^10.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      [
        "@semantic-release/exec",
        {
          "verifyReleaseCmd": "npm run verify-release"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "stability": "experimental",
  "jsii": {
    "outdir": "jsii",
    "versionFormat": "short",
    "targets": {
      "java": {
        "package": "software.amazon.awslabs.breakglassrole",
        "maven": {
          "groupId": "software.amazon.awslabs",
          "artifactId": "breakglassrole",
          "versionSuffix": ".breakglass"
        }
      },
      "python": {
        "distName": "breakglassrole.core",
        "module": "awsbreakglassrole.core"
      },
      "dotnet": {
        "namespace": "Amazon.Module",
        "packageId": "Amazon.Module",
        "versionSuffix": "-breakglass"
      }
    }
  }
}
